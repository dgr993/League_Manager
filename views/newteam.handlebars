<div class="container-fluid">
  <h4 class="col-md-12 text-right" style="color: gray; margin-top: 0;">
    {{moment d "dddd || MMMM DD || h:mm"}}</h4>
</div>
<div class="container">
  <div class="containerteam">
    <h1 class="col-md-12 text-center">Create New Team</h1>
    <form class="team">
      <div class="col-md-12">
        <label for="validationTextarea">Team Name</label>
        <textarea class="form-control is-invalid" id="team-input" placeholder="" required></textarea>
        <div class="invalid-feedback">
          <br>
        </div>
      </div>
      <div class="col-md-12">
        <label for="validationTextarea">Team Coach</label>
        <textarea class="form-control is-invalid" id="coach-input" placeholder="" required></textarea>
        <div class="invalid-feedback">
        </div>
        <br>
        <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
    </form>
  </div>
</div>

<script type="text/javascript" src="/assets/js/newteam.js"></script>